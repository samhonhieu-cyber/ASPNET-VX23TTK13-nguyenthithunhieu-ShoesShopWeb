<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/staff.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar">
            <div class="sidebar-header">
                <h4><i class="fas fa-shoe-prints me-2"></i>Staff Panel</h4>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a asp-page="/Staff/Index">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Categories">
                        <i class="fas fa-list me-2"></i>Quản lý danh mục
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Products">
                        <i class="fas fa-box me-2"></i>Quản lý sản phẩm
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Customers">
                        <i class="fas fa-users me-2"></i>Quản lý khách hàng
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Orders">
                        <i class="fas fa-shopping-cart me-2"></i>Quản lý đơn hàng
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <form asp-page="/Account/Logout" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-light w-100">
                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                    </button>
                </form>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content" class="content">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-outline-secondary">
                        <i class="fas fa-bars"></i>
                    </button>

                    <div class="ms-auto d-flex align-items-center">
                        <span class="me-3">
                            <i class="fas fa-user-circle me-1"></i>
                            <strong>@User.Identity?.Name</strong>
                        </span>
                        <a asp-page="/Index" class="btn btn-sm btn-primary" target="_blank">
                            <i class="fas fa-store me-1"></i>Xem cửa hàng
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/staff.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
