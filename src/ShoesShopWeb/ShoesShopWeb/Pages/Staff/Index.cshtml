@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Staff,Admin")]
@model ShoesShopWeb.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="page-header">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
</div>

<!-- Stats Cards -->
<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Tổng sản phẩm</div>
                    <div class="stat-value">@Model.TotalProducts</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Sản phẩm đang bán</div>
                    <div class="stat-value">@Model.ActiveProducts</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card bg-warning text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Khách hàng</div>
                    <div class="stat-value">@Model.TotalCustomers</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-label">Danh mục</div>
                    <div class="stat-value">@Model.TotalCategories</div>
                </div>
                <div class="stat-icon">
                    <i class="fas fa-tag"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-tasks me-2"></i>Thao tác nhanh
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-page="/Staff/Categories" class="btn btn-outline-primary w-100">
                            <i class="fas fa-list me-2"></i>Quản lý danh mục
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-page="/Staff/Products" class="btn btn-outline-success w-100">
                            <i class="fas fa-box me-2"></i>Quản lý sản phẩm
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-page="/Staff/Orders" class="btn btn-outline-warning w-100">
                            <i class="fas fa-shopping-cart me-2"></i>Quản lý đơn hàng
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-page="/Staff/Customers" class="btn btn-outline-info w-100">
                            <i class="fas fa-users me-2"></i>Quản lý khách hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-clock me-2"></i>Hoạt động gần đây
            </div>
            <div class="card-body">
                <p class="text-muted">Chào mừng đến với trang quản lý cửa hàng giày!</p>
            </div>
        </div>
    </div>
</div>
