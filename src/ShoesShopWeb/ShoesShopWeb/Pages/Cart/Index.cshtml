@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model ShoesShopWeb.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Giỏ hàng của bạn</h2>

    @if (Model.Cart != null && Model.Cart.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.Cart.Items)
                {
                    <div class="cart-item">
                        <img src="@(item.ProductImage ?? "/images/placeholder.jpg")" alt="@item.ProductName" />
                        <div class="cart-item-info">
                            <h5 class="cart-item-title">@item.ProductName</h5>
                            <p class="text-muted mb-2">
                                Size: @item.SizeValue | Màu: @item.ColorName
                            </p>
                            <p class="cart-item-price">@item.UnitPrice.ToString("N0") đ</p>
                        </div>
                        <div class="cart-item-quantity">
                            <button type="button" class="quantity-minus" onclick="updateCartQuantity(@item.CartItemId, @(item.Quantity - 1))">
                                <i class="fas fa-minus"></i>
                            </button>
                            <input type="number" value="@item.Quantity" min="1" max="@item.StockQuantity" readonly class="form-control text-center" />
                            <button type="button" class="quantity-plus" onclick="updateCartQuantity(@item.CartItemId, @(item.Quantity + 1))">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <div class="cart-item-total">
                            <p class="mb-2">@item.TotalPrice.ToString("N0") đ</p>
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeFromCart(@item.CartItemId)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Tổng đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tổng sản phẩm:</span>
                            <strong>@Model.Cart.Items.Sum(i => i.Quantity)</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tạm tính:</span>
                            <strong>@Model.Cart.TotalAmount.ToString("N0") đ</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Tổng cộng:</h5>
                            <h5 class="text-primary">@Model.Cart.TotalAmount.ToString("N0") đ</h5>
                        </div>
                        <a asp-page="/Orders/Checkout" class="btn btn-primary w-100">
                            <i class="fas fa-shopping-bag me-2"></i>Đặt hàng
                        </a>
                        <a asp-page="/Products/Index" class="btn btn-outline-secondary w-100 mt-2">
                            Tiếp tục mua sắm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-cart fa-3x mb-3"></i>
            <h4>Giỏ hàng trống</h4>
            <p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
            <a asp-page="/Products/Index" class="btn btn-primary mt-3">
                Tiếp tục mua sắm
            </a>
        </div>
    }
</div>

@Html.AntiForgeryToken()
