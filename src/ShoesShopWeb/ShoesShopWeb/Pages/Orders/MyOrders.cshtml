@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model ShoesShopWeb.Pages.Orders.MyOrdersModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="fas fa-shopping-bag me-2"></i>Đơn hàng của tôi</h2>

    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="row">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Đơn hàng #@order.OrderId</strong>
                                <span class="text-muted ms-3">
                                    <i class="fas fa-calendar me-1"></i>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </div>
                            <div>
                                @switch (order.Status)
                                {
                                    case Entity.Enums.OrderStatus.Pending:
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                        break;
                                    case Entity.Enums.OrderStatus.Processing:
                                        <span class="badge bg-info">Đang xử lý</span>
                                        break;
                                    case Entity.Enums.OrderStatus.Shipping:
                                        <span class="badge bg-primary">Đang giao</span>
                                        break;
                                    case Entity.Enums.OrderStatus.Delivered:
                                        <span class="badge bg-success">Đã giao</span>
                                        break;
                                    case Entity.Enums.OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Địa chỉ giao hàng:</strong> @order.ShippingAddress
                            </p>
                            <p class="mb-2">
                                <strong>Số điện thoại:</strong> @order.PhoneNumber
                            </p>
                            @if (!string.IsNullOrEmpty(order.Note))
                            {
                                <p class="mb-2">
                                    <strong>Ghi chú:</strong> @order.Note
                                </p>
                            }
                            <hr />
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    Tổng tiền: <span class="text-primary">@order.TotalAmount.ToString("N0") đ</span>
                                </h5>
                                <a asp-page="/Orders/Details" asp-route-id="@order.OrderId" class="btn btn-outline-primary">
                                    <i class="fas fa-eye me-2"></i>Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-shopping-bag fa-3x mb-3"></i>
            <h4>Chưa có đơn hàng nào</h4>
            <p>Bạn chưa có đơn hàng nào. Hãy tiếp tục mua sắm!</p>
            <a asp-page="/Products/Index" class="btn btn-primary mt-3">
                Tiếp tục mua sắm
            </a>
        </div>
    }
</div>
